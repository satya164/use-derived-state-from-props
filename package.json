{
  "name": "use-derived-state-from-props",
  "version": "0.0.0",
  "description": "React hook that implements getDerivedStateFromProps for function components",
  "repository": "https://github.com/satya164/use-derived-state-from-props",
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "use-event",
    "use-callback"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "source": "./src/index.ts",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/src/index.d.ts",
      "default": "./lib/src/index.js"
    }
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prebuild": "del lib",
    "build": "tsc --project tsconfig.build.json --declaration",
    "prepare": "yarn build",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.31.0",
    "eslint-config-satya164": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
